<h1>New Users</h1>

	<%= simple_form_for(@user) do |f| %>
	    <%= f.input :name %>
	    <%= f.input :email %>
	    <%= f.input :password %>
	    <%= f.input :password_confirmation %>
	    <%= f.input :role %>
	    <%= f.input :avatar, as: :file %>
	    <%= f.button :submit %>
	<% end %>
<% if @current_user.role == "admin" %>
<% else %>
<h4>You are not an admin and do not have access to this page.</h4>
<% end %>