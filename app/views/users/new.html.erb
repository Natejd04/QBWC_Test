<div id="page-wrapper" style="min-height: 629px;">  
	<div class="row">
	    <div class="col-md-4 col-md-offset-4">
	        <div class="login-panel panel panel-default">
	            <div class="panel-heading">
	                <h3 class="panel-title">Register New Account</h3>
	            </div>


				<div class="panel-body">
	                <%= simple_form_for(@user, url: registration_path(@user)) do |f| %>
	                    <form role="form" _lpchecked="1" lpformnum="1">
	                        <fieldset>
	                            <div class="form-group">
	                                <%= f.label :avatar %>
	                                <%= f.file_field :avatar %>
	                            </div>
	                            <div class="form-group">
	                                <%= f.input :role, as: :string %>
	                            </div>
	                            <div class="form-group">
	                                 <%= f.input :email, required: true, autofocus: true %>
	                                <%= f.input :phone, as: :tel %>
	                            </div>
	                            <div class="form-group">
	                            	<%= f.input :email, required: false, autofocus: true,  name: "email", class: "form-control", placeholder: "E-mail" %>
	                            </div>
	                            <div class="form-group">
	                            	<%= f.input :password, required: false, name: "password", class: "form-control", placeholder: "Password" %>
	                            </div>
	                            <%= f.button :submit, class: "btn btn-lg btn-success btn-block"%>
	                        </fieldset>
	                    </form>
	                <% end %>
	                <% if flash[:error] %>
				    	<p><%= flash[:error] %></p>
					<% end %>
					<% if flash[:notice] %>
					    <p><%= flash[:notice] %></p>
					<% end %>
	            </div>
	        </div>
		</div>
	</div>
</div>


