 <div id="page-wrapper" style="min-height: 629px;">
    <div class="row">
        <div class="col-lg-12">
			<h1 class="page-header">Invoices</h1>

			<%=  will_paginate @inv1, renderer: BootstrapPagination::Rails %>			

			<div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover table-striped">
                                            <thead>
                                                <tr>
                                                	<th>#</th>
                                                    <th>Name</th>
                                                    <th>Order #</th>
                                                    <th>Date</th>
                                                    <th>PO#</th>
                                                    <th>Amount</th>
                                                </tr>
                                            </thead>
                                           
                                            <tbody class="order-table">
                                           	<% @inv1.each_with_index do |c, index| %>
                                            	<tr>
	                                            	<td><%= index + 1 %>.</td>
													<td><%= c.customer.name %></td>
					 								<td><%= link_to c.c_invoicenumber, invoice_path(c.id) %></td>
													<td><%= c.c_date.strftime("%m/%d/%Y") %></td>
													<td><%= c.c_po %></td>
													<td><%= number_to_currency(c.c_subtotal, :unit=> "$") %></td>
												</tr>
											<% end %>
                                           	</tbody>
                                        </table>
                                    </div>
                                    <!-- /.table-responsive -->
                                </div>                               
                    		</div>
                	    </div>
              

	




			
			



		</div>
	</div>
</div>