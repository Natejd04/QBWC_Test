<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>


			<div class="panel-body">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <form role="form" _lpchecked="1" lpformnum="1">
                        <fieldset>
                            <div class="form-group">
                            	<%= f.input :email, required: false, autofocus: true,  name: "email", class: "form-control", placeholder: "E-mail" %>
                            </div>
                            <div class="form-group">
                            	<%= f.input :password, required: false, name: "password", class: "form-control", placeholder: "Password" %>
                            <div class="checkbox">
                                <label>
                                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                                </label>
                            </div>
                            <%= f.button :submit, class: "btn btn-lg btn-success btn-block"%>
                        </fieldset>
                    </form>
                <% end %>
                <% if flash[:error] %>
			    	<p><%= flash[:error] %></p>
				<% end %>
				<% if flash[:notice] %>
				    <p><%= flash[:notice] %></p>
				<% end %>
            </div>
        </div>
	</div>
</div>

<%= render "devise/shared/links" %>



