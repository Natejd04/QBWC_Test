 <div id="page-wrapper" style="min-height: 629px;">
    <div class="row">
        <div class="col-lg-12">
			<h1 class="page-header">Customers</h1>
			<%=  will_paginate @cust1, renderer: BootstrapPagination::Rails %>		
		</div>
	</div>
			<div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover table-striped">
                                <thead>
                                    <tr>
                                    	<th>#</th>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Address 2</th>
                                        <th>City</th>
                                        <th>State</th>
                                        <th>Zip</th>
                                    </tr>
                                </thead>
                               
                                <tbody class="order-table">
                               	<% @cust1.each_with_index do |c, index| %>
                                	<tr>
                                    	<td><%= index + 1 %>.</td>
										<td><%= link_to c.name, customer_path(c.id) %></td>
										<td><%= c.address %></td>
										<td><%= c.address2 %></td>
										<td><%= c.city %></td>
										<td><%= c.state %></td>
										<td><%= c.zip %></td>
									</tr>
								<% end %>
                               	</tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>                               
        		</div>
    	    </div>
            <!-- end of the row -->

			
		</div>
	</div>
</div>