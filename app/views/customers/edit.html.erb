<h1><%= @customer.listid %></h1>

<%= form_for(@customer) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br />
    <%= f.label :address %>
    <%= f.text_field :address %>
    <br />
    <%= f.label :address2 %>
    <%= f.text_field :address2 %>
    <br />
    <%= f.label :city %>
    <%= f.text_field :city %>
    <br />
    <%= f.label :state %>
    <%= f.text_field :state %>
    <br />
    <%= f.label :zip %>
    <%= f.text_field :zip %>

<%= f.submit "Save Changes" %>
<% end %>