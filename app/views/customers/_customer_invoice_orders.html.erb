<% @customer.invoices.each do |f| %>
<tr>
	<td><%= f.c_name %></td>
	<td><%= link_to f.c_invoicenumber, invoice_path(f.id) %></td>
	<td>Invoice</td>
	<td><%= f.c_date.strftime("%m/%d/%Y") %></td>
	<td><%= f.c_po %></td>
	<td><%= number_to_currency(f.c_subtotal, :unit=> "$") %></td>
</tr>
<% end %>	
<tr> 
	<td colspan="6"><b>TOTAL<div class="pull-right"><%= number_to_currency(@invoice_total, :unit => "$") %></div></b></td>
</tr>
