<h1>Current Trackings</h1>
<table>
	<th>Customer Name</th><th>Ship Date</th><th>Tracking Number</th><th>Ship Method</th><th>Memo</th>
<% @track_today.each do |bi| %>
      <tr>
       <td><%= link_to bi.name, edit_tracking_path(bi.id) %></td><td><%= bi.txn_date %></td><td><%= bi.tracking %></td><td><%= bi.ship_method %></td><td><%= bi.memo %></td>
   </tr>
<% end %>
</table>