<h1>Today's Shipments | <%= Date.today %></h1>
<p>
<input type="button" value="Send Today's Tracking">
</p>

<table>
	<th>Customer Name</th><th>Ship Date</th><th>Tracking Number</th><th>Ship Method</th><th>Memo</th><th>Email?</th>
<% @track_today.each do |bi| %>
      <tr>
       <td><%= link_to bi.name, edit_tracking_path(bi.id) %></td><td><%= bi.txn_date %></td><td><%= bi.tracking %></td><td><%= bi.ship_method %></td><td><%= bi.memo %></td><td>
       	<% if bi.emailed.nil? %>
       		<input type="checkbox" unchecked disabled>
       	<% else %>
       		<input type="checkbox" checked >
        <% end %>
       </td>
   </tr>
<% end %>
</table>