<h1><%= @track.name %></h1>

<%= link_to "Back", trackings_path %>
<%= simple_form_for @track, url: tracking_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br />
   
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br />
    
    <%= f.label :tracking %>
    <%= f.text_field :tracking %>
    <br />
    
    <%= f.label :ship_method %>
    <%= f.text_field :ship_method %>
    <br />

    <%= f.label :memo %>
    <%= f.text_field :memo %>
    <br />

    <%= f.label "# of Packages" %>
    <%= f.text_field :packages %>
    <br />

    <%= f.label "Address 1" %>
    <%= f.text_field :ship1 %>
    <br />

    <%= f.label "Address 2" %>
    <%= f.text_field :ship2 %>
    <br />

    <%= f.label "Address 3" %>
    <%= f.text_field :ship3 %>
    <br />

    <%= f.label "City" %>
    <%= f.text_field :shipcity %>
    <br />

    <%= f.label "State" %>
    <%= f.text_field :shipstate %>
    <br />

    <%= f.label "Postal Code" %>
    <%= f.text_field :shippostal %>
    <br />

    <%= f.label "Country" %>
    <%= f.text_field :shipcountry %>
    <br />

    <%= f.label :emailed %>
    <%= f.input_field :emailed, as: :boolean %>
    <br />
        
<%= f.submit "Save Changes" %>
<% end %>
<%= button_to "Delete Record", @track, method: :delete,
                                  data: { confirm: "You sure?" } %>
