<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
			<th>Customer Name</th>
			<th>Email Address</th>
			<th>Ship Date</th>
			<th>Tracking Number</th>
			<th>Packages</th>
			<th>Ship Method</th>
			<th>Memo</th>
			<th>Email Sent</th>
		</thead>
		<% @emailed.each do |bi| %>
		    <tr>
		       <td><%= link_to bi.c_name, invoices_path(bi.id) %></td>
		       <td><%= bi.email %></td><td><%= bi.c_date.strftime("%m/%d/%y") %></td>
		       <td><%= bi.tracking %></td><td><%= bi.fob %></td>
		       <td><%= bi.ship_method %></td>
		       <td><%= bi.memo %></td>
		       <td><%= bi.emailed.strftime("%m/%d/%y %l:%M%p") %></td>   
		   </tr>
		<% end %>
	</table>
</div>