<table>
	<th>Customer Name</th><th>Email Address</th><th>Inv #</th><th>Ship Date</th><th>Tracking Number</th><th>Packages</th><th>Ship Method</th><th>Memo</th><th>Email?</th>
<% @track_today.each do |bi| %>
      <tr>
       <td><%= link_to bi.name, edit_tracking_path(bi.id) %></td><td><%= bi.email %></td><td><%= bi.txn_id %></td><td><%= bi.txn_date %></td><td><%= bi.tracking %></td><td><%= bi.packages %></td><td><%= bi.ship_method %></td><td><%= bi.memo %></td>
       <td>
       <%= form_for bi, remote: true do |f| %> 
       		<%= f.check_box :emailed, :id => bi.id, :class => 'checkbox-event' %>
       <% end %>
       </td>
   </tr>
<% end %>
</table>