<div class="panel panel-default">
	<div class="panel-heading">
		<i class="fa fa-location-arrow fa-fw"></i>Emails That Need To Be Sent
	</div>
	<div class="table-responsive">
	    <table class="table table-bordered table-hover table-striped">
	        <thead>
				<th>Customer Name</th>
				<th>Email Address</th>
				<th>Inv #</th>
				<th>Ship Date</th>
				<th>Tracking Number</th>
				<th>Packages</th>
				<th>Ship Method</th>
				<th>Memo</th>
				<th>Email?</th>
			</thead>
				<% @track_week.each do |bi| %>
			      <tr>
			       <td><%= link_to bi.c_name, customer_path(bi.customer_id) %></td>
			       <td><%= bi.email %></td>
					<td><%= link_to bi.c_invoicenumber, invoices_path(bi.id) %></td>
			       <td><%= bi.c_date.strftime("%m/%d/%y") %></td>
			       <td><%= bi.tracking %></td>
			       <td><%= bi.fob %></td>
			       <td><%= bi.ship_method %></td>
			       <td><%= bi.memo %></td>
			       <td>
			       		<%= form_for bi, remote: true do |f| %> 
			       			<%= f.check_box :to_email, :id => bi.id, :class => 'checkbox-event' %>
			       		<% end %>
			       </td>
			   	  </tr>
				<% end %>
	</table>
	</div>
</div>