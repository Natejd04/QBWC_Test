<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
                <%= form_for(:session, :url => sessions_path) do |f| %>
                    <form role="form" _lpchecked="1" lpformnum="1">
                        <fieldset>
                            <div class="form-group">
                            	<%= f.text_field :email, name: "email", class: "form-control", placeholder: "E-mail" %>
                            </div>
                            <div class="form-group">
                            	<%= f.password_field :password, name: "password", class: "form-control", placeholder: "Password" %>
                            <div class="checkbox">
                                <label>
                                    <%= f.label :remember_me, "Remember Me", style: "padding-left:0px;" %>
                                </label>
                            </div>
                            <%= f.button :submit, class: "btn btn-lg btn-success btn-block"%>
                        </fieldset>
                    </form>
                <% end %>
                <% if flash[:error] %>
			    	<p><%= flash[:error] %></p>
				<% end %>
				<% if flash[:notice] %>
				    <p><%= flash[:notice] %></p>
				<% end %>
            </div>
        </div>
	</div>
</div>

