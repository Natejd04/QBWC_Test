<% @orders.each do |f| %>
<tr>
	<td><%= link_to f.c_name, customer_path(f.customer_id) %></td>
	<td><%= link_to f.invoice_number, order_path(f.id) %></td>
	<td><%= f.c_date.strftime("%m/%d/%Y") %></td>
	<td><%= f.c_po %></td>
	<td><%= number_to_currency(f.c_total, :unit=> "$") %></td>
</tr>
<% end %>	
<tr> 
	<td colspan="5"><b>TOTAL<div class="pull-right"><%= number_to_currency(@order_total, :unit => "$") %></div></b></td>
</tr>