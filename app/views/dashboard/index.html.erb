                                                    <th>Date</th>
                                                    <th>PO#</th>
                                                    <th>Amount</th>
                                                </tr>
                                            </thead>
                                           
                                            <tbody class="order-table">
                                            	<%= render :partial => 'invoices' %>
                                           	</tbody>
                                           
                                            <tbody class="order-sales-table">
                                            	<%= render :partial => 'sales_orders' %>
                                            </tbody>                                            

                                        </table>
                                    </div>
                                    <!-- /.table-responsive -->
                                </div>                               
                    </div>
                  </div>
              
        </div>
        <!-- /#page-wrapper -->

    <script>
    	$(function() {
      $(".order-table").hide();
      new app.Search();
    
      $('.append-invoices').on('click', function(e) {
        e.preventDefault();
        $(".order-sales-table").hide();       
          $(".order-table").show();     
    });
    $('.append-sales-orders').on('click', function(e) {
        e.preventDefault();
        $(".order-sales-table").show();       
          $(".order-table").hide();     
    });
});
	</script>    
