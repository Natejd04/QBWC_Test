<thead>
    <tr>
        <th>Name</th>
        <th>Order #</th>
        <th>Date</th>
        <th>PO#</th>
        <th>Amount</th>
    </tr>
</thead>
<tbody>
<% @inv_dist.each do |f| %>
<tr>
	<td><%= link_to f.c_name, customer_path(f.customer_id) %></td>
	<td><%= link_to f.c_invoicenumber, invoice_path(f.id) %></td>
	<td><%= f.c_date.strftime("%m/%d/%Y") %></td>
	<td><%= f.c_po %></td>
	<td><%= number_to_currency(f.c_subtotal, :unit=> "$") %></td>
</tr>
<% end %>	
<tr> 
	<td colspan="5"><b>TOTAL<div class="pull-right"><%= number_to_currency(@inv_dist.sum(:c_subtotal), :unit => "$") %></div></b></td>
</tr>
</tbody>